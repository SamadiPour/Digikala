<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/productBigLinear_ImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:padding="10dp"
            app:placeholderImage="@drawable/alt_500px"
            app:placeholderImageScaleType="fitCenter" />

        <TextView
            android:id="@+id/productBigLinear_persianTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:lines="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/content_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="اسم کالا به فارسی" />

        <TextView
            android:id="@+id/productBigLinear_englishTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:lines="2"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="product name in english. this field can take 2 line of text. this test only. also this is big card" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/divider_grey" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productBigLinear_topPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dg_red"
                    android:textSize="11sp"
                    tools:text="25000000 تومان" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="4dp" />

                <TextView
                    android:id="@+id/productBigLinear_lowPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_green"
                    android:textSize="13sp"
                    tools:text="1000000 تومان" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/productBigLinear_specialOfferBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_background_special_offer"
                    android:gravity="center"
                    android:padding="1dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/special_offer_red_box_text"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/productBigLinear_colorLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</androidx.cardview.widget.CardView>