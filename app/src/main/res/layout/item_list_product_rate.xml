<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="3dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_productRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="right"
        android:textColor="@color/content_text_color"
        android:textSize="10sp"
        android:textStyle="normal"
        tools:text="کیفیت" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="11dp"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/first_productRate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="13"
            android:max="20"
            android:progress="0"
            android:progressBackgroundTint="#BBBBBB"
            android:progressTint="#549755"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/second_productRate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="13"
            android:max="20"
            android:progress="0"
            android:progressBackgroundTint="#BBBBBB"
            android:progressTint="#549755"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/third_productRate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="13"
            android:max="20"
            android:progress="0"
            android:progressBackgroundTint="#BBBBBB"
            android:progressTint="#549755"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/forth_productRate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="13"
            android:max="20"
            android:progress="0"
            android:progressBackgroundTint="#BBBBBB"
            android:progressTint="#549755"
            android:scaleY="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ProgressBar
            android:id="@+id/fifth_productRate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="13"
            android:max="20"
            android:progress="0"
            android:progressBackgroundTint="#BBBBBB"
            android:progressTint="#549755"
            android:scaleY="2" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>