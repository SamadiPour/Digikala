<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:layoutDirection="rtl"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/productSmallGrid_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            app:placeholderImage="@drawable/alt_500px"
            app:placeholderImageScaleType="centerInside"
            app:viewAspectRatio="1" />

        <TextView
            android:id="@+id/productSmallGrid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="گوشی موبایل سامسونگ" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/divider_grey" />

        <TextView
            android:id="@+id/productSmallGrid_topPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dg_red"
            android:textSize="11sp"
            android:textStyle="normal"
            android:visibility="visible"
            tools:text="25000000 تومان" />

        <TextView
            android:id="@+id/productSmallGrid_lowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="13sp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/text_green"
            android:textStyle="normal"
            tools:text="1000000 تومان" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>